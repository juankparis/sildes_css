@import "nib"
@import "normalize.styl"

.contenedor
	background rgba(0,0,0,0.1)
	border 3px solid rgba(0, 0, 0, .75)
	box-shadow 9px 9px 5px rgba(0, 0, 0, .75)
	font-size: 0
	height 400px
	margin-top 1rem
	margin: 0 auto
	max-height 400px
	max-width 100vw
	overflow: hidden
	position relative
	width 400px
	&-silde
		animation animacion 20s infinite
		height 400px
		left 0
		position absolute
		top 0
		width 2000px
	&-figure
		background-attachment fixed
		background-position center
		background-size cover
		display inline-block
		height 400px
		margin 0
		max-width 400px
		position relative
		width 400px
	&-span
		background rgba(0, 0, 0, .3)
		border-left none
		border-radius:0, 1rem 1rem 0
		border: 3px solid white
		color white
		font-size 3rem
		font-style italic
		left 0
		padding 0.5rem 1rem
		position absolute
		top 40%

.uno
	background-image url(../img/azul.jpg)
.dos
	background-image url(../img/css.jpg)
.tres
	background-image url(../img/javascript.jpg)
.cuatro
	background-image url(../img/retina.jpg)
.cinco
	background-image url(../img/angu.jpg)
		
/*animacion de sildes portada superior en stylus no se puede quitar en : y ; en los porcentajes*/ 
@keyframes animacion
	0% {left: 0%;}
	15% {left: 0%;}
	20% {left: -100%;}
	35% {left: -100%;}
	40% {left: -200%;}
	55% {left: -200%; }
	60% {left: -300%; }
	75% {left: -300%; }
	80% {left: -400%; }
	95% {left: -400%; }   
	100% {left: 0; }



