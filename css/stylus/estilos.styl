@import "nib"
@import "normalize.styl"

body
	background-image url(../img/fibraf.jpg)
	background-size cover
	font-family: 'Exo', sans-serif;

.headerCont
	font-size 0
	height 100vh
	margin 0 auto
	max-height 100vh
	max-width 100vw
	overflow: hidden
	position relative
	width 100vw
	&-slide
		animation animacion 20s infinite
		height 100vh
		left 0
		position absolute
		top 0
		width 500vw
	&-slider
		background-attachment fixed
		background-position center
		background-size cover
		display inline-block
		height 100vh
		position relative
		width 100vw
	&-span
		// padding 0.3rem 1rem 0.3rem 0.5rem	
		background rgba(0, 0, 0, .4)
		border-radius:0, 1rem 1rem 0
		border: 1px solid white
		border-left none
		color white
		font-family 'Exo'
		font-size 8vh
		font-style italic
		font-weight 100
		left 0
		left: 0
		padding 0.5rem 1rem
		position absolute
		top 40%

	&-links
		border 2px solid red
		color red
		font-size 1rem
		height 50px
		left 40%
		margin 0
		position absolute
		top 80%
		width 200px
	&-links a
		background: red
		color: white;
		padding 0 1.2rem 2rem 1rem
		text-decoration none
		width 100%

.img-slider1
	background-image url(../img/write.png)

.img-slider2
	background-image url(../img/css.jpg)

.img-slider3
	background-image url(../img/javascript.jpg)

.img-slider4
	background-image url(../img/retina.jpg)

.img-slider5
	background-image url(../img/angu.jpg)

/*sildes cubo*/
.contenedor
	border 3px solid rgba(0, 0, 0, .75)
	box-shadow 9px 9px 5px rgba(0, 0, 0, .75)
	font-size: 0
	height 400px
	margin-top 2rem
	margin: 0 auto
	max-height 400px
	max-width 100vw
	overflow: hidden
	position relative
	width 400px
	&-silde
		animation animacion 20s infinite
		height 400px
		left 0
		position absolute
		top 0
		width 2000px
	&-figure,
	&-figure img
		// background-attachment fixed
		background-position center
		background-size cover 
		display inline-block
		height 400px
		margin 0
		max-width 400px
		position relative
		width 400px
	&-span
		background rgba(0, 0, 0, .4)
		border-radius:0, 1rem 1rem 0
		border: 1px solid white
		border-left none
		color white
		font-size 3rem
		font-style italic
		left 0
		padding 0.5rem 1rem
		position absolute
		top 40%

/*animacion de sildes portada superior en stylus no se puede quitar en : y ; en los porcentajes*/ 

@keyframes animacion
	0% {left: 0%;}
	15% {left: 0%;}
	20% {left: -100%;}
	35% {left: -100%;}
	40% {left: -200%;}
	55% {left: -200%; }
	60% {left: -300%; }
	75% {left: -300%; }
	80% {left: -400%; }
	95% {left: -400%; }   
	100% {left: 0; }