@import "nib"
@import "normalize.styl"
@import "fonts.styl"

/*slider index.htlm*/
body
	background-image url(../img/fibraf.jpg)
	background-size cover
	font-family: 'Exo', sans-serif;

.headerCont
	font-size 0
	height 100vh
	margin 0 auto
	max-height 100vh
	max-width 100vw
	overflow: hidden
	position relative
	width 100vw
	&-slide
		animation animacion 20s infinite
		height 100vh
		left 0
		position absolute
		top 0
		width 500vw
	&-slider
		background-attachment fixed
		background-position center
		background-size cover
		display inline-block
		height 100vh
		position relative
		width 100vw
	&-span
		background rgba(0, 0, 0, .4)
		border-radius:0, 1rem 1rem 0
		border: 1px solid white
		border-left none
		color white
		font-family 'Exo'
		font-size 8vh
		font-style italic
		font-weight 100
		left 0
		left: 0
		padding 0.5rem 1rem
		position absolute
		top 40%

	&-links
		bottom 0.5rem
		font-size 2rem
		height 50px
		margin 0
		max-width 200px
		position absolute
		right 1rem
	&-links a
		color: white;
		padding 0 1.2rem 2rem 1rem
		text-decoration none
		width 100%
	&-links_siguiente,
	&-links_atras
			bottom 0
			font-size 1rem
			position absolute
			right -0.5rem
	&-links_atras
		right 5.3rem
		
.img-slider1
	background-image url(../img/write.png)

.img-slider2
	background-image url(../img/css.jpg)

.img-slider3
	background-image url(../img/javascript.jpg)

.img-slider4
	background-image url(../img/retina.jpg)

.img-slider5
	background-image url(../img/angu.jpg)

/*sildes cuadrado*/
.contenedor
	border 3px solid rgba(0, 0, 0, .75)
	box-shadow 9px 9px 5px rgba(0, 0, 0, .75)
	font-size: 0
	height 350px
	margin: 0 auto
	max-height 350px
	margin-top 2rem
	max-width 100vw
	overflow: hidden
	position relative
	width 350px
	&-silde
		animation animacion 20s infinite
		height 350px
		left 0
		position absolute
		top 0
		width 1750px
	&-figure,
	&-figure img
		// background-attachment fixed
		background-position center
		background-size cover 
		display inline-block
		height 350px
		margin 0
		max-width 350px
		position relative
		width 350px
	&-span
		background rgba(0, 0, 0, .4)
		border-radius:0, 1rem 1rem 0
		border: 1px solid white
		border-left none
		color white
		font-size 3rem
		font-style italic
		padding 0.5rem 1rem
		position absolute
		top 40%

/*animacion de sildes portada superior en stylus no se puede quitar en : y ; en los porcentajes*/ 

@keyframes animacion
	0% {left: 0%;}
	15% {left: 0%;}
	20% {left: -100%;}
	35% {left: -100%;}
	40% {left: -200%;}
	55% {left: -200%; }
	60% {left: -300%; }
	75% {left: -300%; }
	80% {left: -400%; }
	95% {left: -400%; }   
	100% {left: 0; }
	
/*slide top*/

.slideCont
	font-size 0
	height 100vh
	margin 0 auto
	max-height 100vh
	max-width 100vw
	overflow: hidden
	position relative
	width 100vw
	&-slide
		animation animaciontop 20s infinite
		transition all 0.3s linear
		height 500vh
		left 0
		position absolute
		top 0
		width 100vw
	&-slider
		background-attachment fixed
		background-position center
		background-size cover
		height 100vh
		position relative
		width 100vw
		/*span es el mismo de index.html*/
/*img-slider1 ,2,3,4,5 son los mismos de arriba*/
@keyframes animaciontop
	0% {top: 0%;}
	15% {top: 0%;}
	20% {top: -100%;}
	35% {top: -100%;}
	40% {top: -200%;}
	55% {top: -200%; }
	60% {top: -300%; }
	75% {top: -300%; }
	80% {top: -400%; }
	95% {top: -400%; }   
	100% {top: 0; }